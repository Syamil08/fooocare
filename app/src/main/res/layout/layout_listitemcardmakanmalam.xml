<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="1dp">

    <androidx.cardview.widget.CardView
        android:layout_width="120dp"
        android:layout_height="170dp"
        app:cardCornerRadius="6dp"
        app:cardMaxElevation="2dp"
        app:cardElevation="1dp"
        android:layout_centerInParent="true">
        
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/image_makananMalam"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:scaleType="centerCrop"
                android:layout_centerHorizontal="true"
                android:src="@drawable/ic_launcher_background"/>
            
            <TextView
                android:id="@+id/tvMakananCardMalam"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Apple"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/image_makananMalam"
                android:gravity="center"
                android:layout_marginTop="5dp"
                android:textColor="#000"
                android:autoSizeTextType="uniform"
                android:autoSizeMinTextSize="8sp"
                android:autoSizeMaxTextSize="15sp"/>

            <TextView
                android:id="@+id/tvBanyakKaloriMalam"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="53 Cal/100g"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/tvMakananCardMalam"
                android:gravity="center"
                android:layout_marginTop="5dp"
                android:textColor="#000"
                android:layout_marginBottom="5dp"
                android:autoSizeTextType="uniform"
                android:autoSizeMinTextSize="8sp"
                android:autoSizeMaxTextSize="15sp" />
            
        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>