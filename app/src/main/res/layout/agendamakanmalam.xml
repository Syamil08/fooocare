<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="25dp">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/imageAgendapagi"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/makanpagi"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="5dp"
                android:fontFamily="@font/coresans"
                android:layout_weight="1">
                <TextView
                    android:id="@+id/textJudulpagi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Judul"
                    android:textStyle="bold"
                    android:fontFamily="@font/coresans"
                    android:textSize="18sp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"/>
                <TextView
                    android:id="@+id/caloriPagi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Deskripsi Kalori"
                    android:fontFamily="@font/coresans"
                    android:textSize="14sp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="15dp"/>

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="0.8dp"
                    android:layout_marginLeft="19dp"
                    android:background="@android:color/darker_gray" />
            </LinearLayout>

            <ImageButton
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/btn_circlecardhome"
                android:layout_gravity="center"
                android:src="@drawable/ic_plus"
                android:layout_marginRight="10dp" />

        </TableRow>

    </TableLayout>




</RelativeLayout>